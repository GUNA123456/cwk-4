<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.mycompany.javafxapplication1.UserAccountController" 
            prefWidth="800" prefHeight="600">
    
    <!-- LEFT NAVIGATION PANEL (220px width) -->
    <left>
        <VBox spacing="0" style="-fx-background-color: #1A3A52;" prefWidth="220" minWidth="220" maxWidth="220">
            <padding>
                <Insets top="20" bottom="20" left="0" right="0" />
            </padding>
            <children>
                <!-- User Management Button -->
                <Button fx:id="btnUserManagementMenu" text="User Management" onAction="#showUserManagement" 
                        style="-fx-background-color: #5FA4B8; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 15; -fx-alignment: CENTER_LEFT; -fx-cursor: hand; -fx-border-width: 0;" 
                        maxWidth="Infinity" />
                <Separator style="-fx-background-color: #0D2A35; -fx-padding: 0;" />
                
                <!-- File Management Button -->
                <Button fx:id="btnFileManagementMenu" text="File Management" onAction="#showFileManagement" 
                        style="-fx-background-color: #1A3A52; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 15; -fx-alignment: CENTER_LEFT; -fx-cursor: hand; -fx-border-width: 0;" 
                        maxWidth="Infinity" />
                <Separator style="-fx-background-color: #0D2A35; -fx-padding: 0;" />
                
                <!-- Advanced Panel Button -->
                <Button fx:id="btnAdvancedPanelMenu" text="Advanced Panel" onAction="#showAdvancedPanel" 
                        style="-fx-background-color: #1A3A52; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 15; -fx-alignment: CENTER_LEFT; -fx-cursor: hand; -fx-border-width: 0;" 
                        maxWidth="Infinity" />
                <Separator style="-fx-background-color: #0D2A35; -fx-padding: 0;" />
                
                <!-- Spacer to push Logout to bottom -->
                <Region VBox.vgrow="ALWAYS" />
                
                <!-- Logout Button (Danger Style) -->
                <Button fx:id="btnLogout" text="Logout" onAction="#handleBack" 
                        style="-fx-background-color: #D32F2F; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 15; -fx-alignment: CENTER; -fx-cursor: hand; -fx-border-width: 0;" 
                        maxWidth="Infinity" />
            </children>
        </VBox>
    </left>
    
    <!-- RIGHT CONTENT AREA -->
    <center>
        <StackPane style="-fx-background-color: #2B547E;">
            
            <!-- USER MANAGEMENT PANEL -->
            <AnchorPane fx:id="userManagementPanel" visible="true" style="-fx-background-color: #2B547E;">
                <VBox spacing="20" AnchorPane.topAnchor="30" AnchorPane.leftAnchor="30" AnchorPane.rightAnchor="50">
                    <!-- User Label -->
                    <Label fx:id="lblUser" text="User:" style="-fx-text-fill: black; -fx-font-size: 16px; -fx-font-weight: bold;" />
                    
                    <!-- Password Fields Grid -->
                    <GridPane hgap="20" vgap="15">
                        <columnConstraints>
                            <ColumnConstraints hgrow="NEVER" minWidth="180" prefWidth="180" halignment="RIGHT" />
                            <ColumnConstraints hgrow="NEVER" minWidth="300" prefWidth="350" maxWidth="350" />
                        </columnConstraints>
                        
                        <children>
                            <!-- Current Password -->
                            <Label text="Current password" GridPane.columnIndex="0" GridPane.rowIndex="0" 
                                   style="-fx-text-fill: black; -fx-font-size: 14px;" />
                            <PasswordField fx:id="currentPasswordField" GridPane.columnIndex="1" GridPane.rowIndex="0" 
                                          promptText="TF1" style="-fx-background-color: #E0E0E0; -fx-text-fill: black;" 
                                          prefHeight="35" />
                            
                            <!-- New Password -->
                            <Label text="New password" GridPane.columnIndex="0" GridPane.rowIndex="1" 
                                   style="-fx-text-fill: black; -fx-font-size: 14px;" />
                            <PasswordField fx:id="newPasswordField" GridPane.columnIndex="1" GridPane.rowIndex="1" 
                                          promptText="TF2" style="-fx-background-color: #E0E0E0; -fx-text-fill: black;" 
                                          prefHeight="35" />
                            
                            <!-- Retype Password -->
                            <Label text="Retype password" GridPane.columnIndex="0" GridPane.rowIndex="2" 
                                   style="-fx-text-fill: black; -fx-font-size: 14px;" />
                            <PasswordField fx:id="retypePasswordField" GridPane.columnIndex="1" GridPane.rowIndex="2" 
                                          promptText="TF3" style="-fx-background-color: #E0E0E0; -fx-text-fill: black;" 
                                          prefHeight="35" />
                            
                            <!-- Empty TF4 -->
                            <Label text="" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                            <PasswordField GridPane.columnIndex="1" GridPane.rowIndex="3" 
                                          promptText="TF4" style="-fx-background-color: #E0E0E0; -fx-text-fill: black;" 
                                          prefHeight="35" visible="false" />
                        </children>
                    </GridPane>
                    
                    <!-- Action Buttons -->
                    <HBox alignment="CENTER" spacing="30">
                        <Button fx:id="updatePasswordBtn" text="Update password" onAction="#handleUpdatePassword" 
                                style="-fx-background-color: #999999; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 12 25; -fx-cursor: hand;" />
                        <Button fx:id="deleteAccountBtn" text="Delete account" onAction="#handleDeleteAccount" 
                                style="-fx-background-color: #A94442; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 12 25; -fx-cursor: hand;" />
                    </HBox>
                    

                    
                    <!-- Status Label -->
                    <Label fx:id="lblStatus" text="" style="-fx-text-fill: white; -fx-font-size: 12px;" />
                </VBox>
            </AnchorPane>
            
            <!-- FILE MANAGEMENT PANEL -->
            <AnchorPane fx:id="fileManagementPanel" visible="false" style="-fx-background-color: #2B547E;">
                <VBox spacing="20" AnchorPane.topAnchor="30" AnchorPane.leftAnchor="30" AnchorPane.rightAnchor="50">
                    <!-- File Fields Grid -->
                    <GridPane hgap="20" vgap="15">
                        <columnConstraints>
                            <ColumnConstraints hgrow="NEVER" minWidth="150" prefWidth="150" halignment="RIGHT" />
                            <ColumnConstraints hgrow="NEVER" minWidth="350" prefWidth="400" maxWidth="400" />
                        </columnConstraints>
                        
                        <children>
                            <!-- File Path -->
                            <Label text="File path" GridPane.columnIndex="0" GridPane.rowIndex="0" 
                                   style="-fx-text-fill: black; -fx-font-size: 14px;" />
                            <HBox spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="0">
                                <TextField fx:id="filePathField" promptText="/path/to/file.txt" 
                                          style="-fx-background-color: #E0E0E0;" prefHeight="35" HBox.hgrow="ALWAYS" />
                                <Button fx:id="btnBrowseFilePath" text="Browse..." onAction="#handleBrowseFilePath" 
                                       style="-fx-background-color: #999999; -fx-text-fill: white; -fx-font-size: 12px; -fx-padding: 8 15; -fx-cursor: hand;" />
                            </HBox>
                            
                            <!-- File Name -->
                            <Label text="File name" GridPane.columnIndex="0" GridPane.rowIndex="1" 
                                   style="-fx-text-fill: black; -fx-font-size: 14px;" />
                            <TextField fx:id="fileNameField" GridPane.columnIndex="1" GridPane.rowIndex="1" 
                                      promptText="TF1" style="-fx-background-color: #E0E0E0;" prefHeight="35" />
                            
                            <!-- File Content -->
                            <Label text="File Content" GridPane.columnIndex="0" GridPane.rowIndex="2" 
                                   style="-fx-text-fill: black; -fx-font-size: 14px;" GridPane.valignment="TOP" />
                            <TextArea fx:id="fileContentArea" GridPane.columnIndex="1" GridPane.rowIndex="2" 
                                     promptText="TA1" style="-fx-background-color: #E0E0E0;" prefRowCount="5" prefHeight="120" />
                        </children>
                    </GridPane>
                    
                    <!-- File Operation Buttons Row 1 -->
                    <HBox alignment="CENTER" spacing="30">
                        <Button fx:id="btnCreate" text="Create" onAction="#handleCreateFile" 
                                style="-fx-background-color: #999999; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 12 25; -fx-cursor: hand;" />
                        <Button fx:id="btnUpdate" text="Update" onAction="#handleUpdateFile" 
                                style="-fx-background-color: #999999; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 12 25; -fx-cursor: hand;" />
                        <Button fx:id="btnDelete" text="Delete" onAction="#handleDeleteFile" 
                                style="-fx-background-color: #999999; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 12 25; -fx-cursor: hand;" />
                    </HBox>
                    
                    <!-- File Operation Buttons Row 2 -->
                    <HBox alignment="CENTER" spacing="30">
                        <Button fx:id="btnShell" text="Shell emulation" onAction="#handleShellEmulation" 
                                style="-fx-background-color: #999999; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 12 25; -fx-cursor: hand;" />
                        <Button fx:id="btnUpload" text="Upload" onAction="#handleUpload" 
                                style="-fx-background-color: #999999; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 12 25; -fx-cursor: hand;" />
                        <Button fx:id="btnClear" text="Clear" onAction="#handleClearForm" 
                                style="-fx-background-color: #6C757D; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 12 25; -fx-cursor: hand;" />
                    </HBox>
                    
                    <!-- File List -->
                    <ListView fx:id="fileListView" prefHeight="120" style="-fx-background-color: #E0E0E0; -fx-border-color: black; -fx-border-width: 1;" />
                    
                    <!-- Download Section -->
                    <HBox alignment="CENTER" spacing="15">
                        <Label text="Download path" style="-fx-text-fill: black; -fx-font-size: 14px;" />
                        <TextField fx:id="downloadPathField" promptText="/path/to/download" 
                                  style="-fx-background-color: #E0E0E0;" prefWidth="200" prefHeight="35" />
                        <Button fx:id="btnBrowseDownloadPath" text="Browse..." onAction="#handleBrowseDownloadPath" 
                               style="-fx-background-color: #999999; -fx-text-fill: white; -fx-font-size: 12px; -fx-padding: 8 15; -fx-cursor: hand;" />
                        <Button fx:id="btnDownload" text="Download" onAction="#handleDownload" 
                                style="-fx-background-color: #999999; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 12 25; -fx-cursor: hand;" />
                    </HBox>
                    
                    <!-- Status Label -->
                    <Label fx:id="lblFileStatus" text="" style="-fx-text-fill: #28a745; -fx-font-size: 13px; -fx-font-weight: bold;" />
                    

                </VBox>
            </AnchorPane>
            
            <!-- SHELL EMULATOR PANEL -->
            <AnchorPane fx:id="shellPanel" visible="false" style="-fx-background-color: #1E1E1E;">
                <VBox spacing="10" AnchorPane.topAnchor="15" AnchorPane.leftAnchor="15" AnchorPane.rightAnchor="15" AnchorPane.bottomAnchor="15">
                    
                    <!-- Header -->
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <Label fx:id="lblShellInfo" text="Shell Emulator" 
                               style="-fx-text-fill: #00FF00; -fx-font-size: 14px; -fx-font-weight: bold; -fx-font-family: 'Courier New', monospace;" />
                    </HBox>
                    
                    <Separator style="-fx-background-color: #00FF00;" />
                    
                    <!-- Output Area (Terminal Display) -->
                    <TextArea fx:id="txtShellOutput" editable="false" wrapText="true" 
                              VBox.vgrow="ALWAYS" prefHeight="350"
                              style="-fx-control-inner-background: #000000; 
                                     -fx-text-fill: #00FF00; 
                                     -fx-font-family: 'Courier New', monospace; 
                                     -fx-font-size: 13px;
                                     -fx-highlight-fill: #00FF00;
                                     -fx-highlight-text-fill: #000000;" />
                    
                    <!-- Command Input Area -->
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Label text=">" style="-fx-text-fill: #00FF00; -fx-font-size: 14px; -fx-font-weight: bold; -fx-font-family: 'Courier New', monospace;" />
                        
                        <TextField fx:id="txtShellCommand" promptText="Enter command..." 
                                   HBox.hgrow="ALWAYS"
                                   style="-fx-background-color: #2E2E2E; 
                                          -fx-text-fill: #00FF00; 
                                          -fx-prompt-text-fill: #666666;
                                          -fx-font-family: 'Courier New', monospace; 
                                          -fx-font-size: 13px;" />
                        
                        <Button fx:id="btnShellRun" text="Run" onAction="#handleShellRunCommand" 
                                prefWidth="80"
                                style="-fx-background-color: #28a745; 
                                       -fx-text-fill: white; 
                                       -fx-font-size: 12px; 
                                       -fx-font-weight: bold;
                                       -fx-cursor: hand;" />
                    </HBox>
                    
                    <!-- Action Buttons -->
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Button fx:id="btnShellClear" text="Clear Output" onAction="#handleShellClear" 
                                prefWidth="120"
                                style="-fx-background-color: #ffc107; 
                                       -fx-text-fill: black; 
                                       -fx-font-size: 12px;
                                       -fx-cursor: hand;" />
                        
                        <Button fx:id="btnShellHistory" text="History" onAction="#handleShellHistory" 
                                prefWidth="100"
                                style="-fx-background-color: #17a2b8; 
                                       -fx-text-fill: white; 
                                       -fx-font-size: 12px;
                                       -fx-cursor: hand;" />
                        
                        <Region HBox.hgrow="ALWAYS" />
                        
                        <Button fx:id="btnShellBack" text="Back to File Management" onAction="#handleShellBack" 
                                prefWidth="180"
                                style="-fx-background-color: #dc3545; 
                                       -fx-text-fill: white; 
                                       -fx-font-size: 12px;
                                       -fx-cursor: hand;" />
                    </HBox>
                </VBox>
            </AnchorPane>
            
        </StackPane>
    </center>
</BorderPane>
